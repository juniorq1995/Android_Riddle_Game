<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jquintero.riddle.PlayerSelect">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
        android:id="@+id/player1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Player 1's Name"
        android:inputType="textCapSentences|textNoSuggestions"
        android:layout_marginBottom="40dp" />

        <EditText
            android:id="@+id/player2"
            android:layout_below="@id/player1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Player 2's Name"
            android:inputType="textCapSentences|textNoSuggestions"
            android:layout_marginBottom="40dp"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/player3"
            android:layout_below="@id/player2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Player 3's Name"
            android:inputType="textCapSentences|textNoSuggestions"
            android:layout_marginBottom="40dp"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/player4"
            android:layout_below="@id/player3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Player 4's Name"
            android:inputType="textCapSentences|textNoSuggestions"
            android:layout_marginBottom="40dp"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/player5"
            android:layout_below="@id/player4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Player 5's Name"
            android:inputType="textCapSentences|textNoSuggestions"
            android:layout_marginBottom="20dp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/playerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/player5"
            android:layout_alignParentRight="true"
            android:text="Remove a Player"
            android:onClick="removePlayer"/>

        <Button
            android:id="@+id/addPlayerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Another Player"
            android:onClick="addPlayer"
            android:layout_below="@id/player5"/>

        <Button
            android:id="@+id/gameStartButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Start the Game"
            android:onClick="startGame"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
