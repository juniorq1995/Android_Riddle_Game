<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_random"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jquintero.riddle.Random">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.jquintero.riddle.Random">

        <TextView
            android:text="riddle"
            android:id="@+id/randomRiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:visibility="invisible"
            android:paddingBottom="20dp"/>

        <Button
            android:text="Click here to generate a Random Riddle!"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:onClick="displayRandomRiddle"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/randomClick"/>

        <TextView
            android:text="Click to see the Answer"
            android:textSize="20dp"
            android:gravity="center"
            android:id="@+id/randomAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="displayRandomAnswer"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
