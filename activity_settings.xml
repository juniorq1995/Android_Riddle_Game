<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jquintero.riddle.Settings">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:layout_alignParentTop="true"
        android:text="Super Easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="75dp"
        android:onClick="checked"
        android:id="@+id/checkBox4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="85dp"
        android:text = "Unlimited Hints and Skips"
        android:id="@+id/desc4"/>

    <CheckBox
        android:text="Easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="75dp"
        android:layout_below="@id/checkBox4"
        android:onClick="checked"
        android:id="@+id/checkBox1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/desc4"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text = "5 Hints and 5 Skips"
        android:id="@+id/desc1"/>

    <CheckBox
        android:text="Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/checkBox1"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="75dp"
        android:onClick="checked"
        android:id="@+id/checkBox2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="65dp"
        android:text = "2 Hints and 2 Skips"
        android:id="@+id/desc2"/>

    <CheckBox
        android:text="Hard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/checkBox2"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="75dp"
        android:onClick="checked"
        android:id="@+id/checkBox3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="65dp"
        android:text = "No Hints or Skips"
        android:id="@+id/desc3"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/desc3"
        android:onClick="submit"
        />

</RelativeLayout>
</android.support.constraint.ConstraintLayout>
